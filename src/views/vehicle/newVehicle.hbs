<main1 id="page-top">
    <div id="wrapper">
        {{> sidebar}}
        <div id="content-wrapper">

            <div class="container-fluid">

                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Panel</a></li>
                    <li class="breadcrumb-item"><a href="/vehicle"> Vehiculos</a></li>
                    <li class="breadcrumb-item">Nuevo Vehiculo</li>
                </ol>

                {{> messaje}}

                <div class="container">
                    <div class="col-md-9 mx-auto">
                        <form action="/vehicle/add" method="POST" enctype="multipart/form-data">
                            <div class="card">
                                <div class="card-body">
                                    <div class="container">
                                        <div class="row">
                                            <span class="border-right col-xs-12 col-md-4">
                                                <div class=" row">
                                                    <span>
                                                        <div class="form-group">

                                                            <img id="imagePreview" class="figure-img img-fluid rounded"
                                                                src="/img/man-user.png" width="100%" height="150"
                                                                alt="Responsive image">
                                                        </div>
                                                    </span>
                                                </div>
                                                <div class="row">
                                                    <span>
                                                        <div class="form-group">
                                                            <label for="image" class="custom-file-upload">
                                                                <i class="fa fa-cloud-upload"></i> Subir Imagen de
                                                                Perfil
                                                            </label>
                                                            <input id="image" type="file" name="image" />
                                                        </div>
                                                    </span>
                                                </div>
                                            </span>
                                            <span class="col-md-8">
                                                <div class="form-group">
                                                    <input type="text" name="Placa" placeholder="Placa"
                                                        class="form-control" autofocus>
                                                </div>
                                                <div class="form-group">
                                                    <label for="Color">Rango: </label>
                                                    <select class="btn btn-light" name="Color">
                                                        <option value="" disabled>seleccione una opcion</option>
                                                        <option value="Motobomba">Motobomba</option>
                                                        <option value="Camioneta">Camioneta</option>
                                                        <option value="Automovil">Automovil</option>
                                                        <option value="Motocicleta">Motocicleta</option>
                                                    </select>
                                                </div>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="row float-right">
                                        <span>
                                            <button class="btn btn-primary">
                                                Guardar
                                            </button>
                                        </span>
                                        <span class="col-md-3">
                                            <a href="/vehicle" class="btn btn-secondary">Cancelar</a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /.content-wrapper -->
    </div>
</main1>