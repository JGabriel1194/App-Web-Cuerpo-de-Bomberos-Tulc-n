<main1 id="page-top">
    <div id="wrapper">
        {{> sidebar}}
        <div id="content-wrapper">

            <div class="container-fluid">

                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Panel</a></li>
                    <li class="breadcrumb-item"><a href="/users"> Usuarios</a></li>
                    <li class="breadcrumb-item">Nuevo Usuario</li>
                </ol>

                {{> messaje}}

                <div class="container">
                    <div class="col-md-8 mx-auto">
                        <form action="/users/add" method="POST" enctype="multipart/form-data">
                            <div class="card">
                                <div class="card-body">
                                    <div class="container">
                                        <div class="row">
                                            <span class="border-right col-xs-12 col-md-4">
                                                <div class=" row">
                                                    <span>
                                                        <div class="form-group">

                                                            <img id="imagePreview" class="figure-img img-fluid rounded"
                                                                src="{{#if user.image}} /files/profile/{{user.image}} {{else}} /img/man-user.png {{/if}}" width="100%" height="150"
                                                                alt="Responsive image">
                                                        </div>
                                                    </span>
                                                </div>
                                                <div class="row">
                                                    <span>
                                                        <div class="form-group">
                                                            <label for="image" class="custom-file-upload">
                                                                <i class="fa fa-cloud-upload"></i> Subir Imagen de Perfil
                                                            </label>
                                                            <input id="image" type="file" name="image" />
                                                        </div>
                                                    </span>
                                                </div>
                                            </span>
                                            <span class="col-md-8">
                                                <div class="form-group">
                                                    <input type="text" name="Cedula" placeholder="Cédula"
                                                        class="form-control" value="{{user.Cedula}} " autofocus>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" name="Nombres" placeholder="Nombres"
                                                        class="form-control" value="{{user.Nombres}} ">
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" name="Apellidos" placeholder="Apellidos"
                                                        class="form-control" value="{{user.Apellidos}} ">
                                                </div>
                                                <div class="form-group">
                                                    <div class="row">
                                                        <span class="col-md-6">
                                                            <label for="Rango">Rango: </label>
                                                            <select class="btn btn-light" name="idRango"
                                                                placeholder="hola">
                                                                {{#each ranges}}
                                                                <option value="{{idRango}} ">{{Rango}} </option>
                                                                {{/each}}
                                                            </select>
                                                        </span>
                                                        <span class="col-md-6">
                                                            <label for="Rol">Rol: </label>
                                                            <select class="btn btn-light" name="idRol">
                                                                {{#each roles}}
                                                                <option value="{{idRol}} ">{{Rol}}</option>
                                                                {{/each}}
                                                            </select>
                                                        </span>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <input type="password" name="Contrasenia" placeholder="Contraseña"
                                                        class="form-control">
                                                </div>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="row float-right">
                                        <span>
                                            <button class="btn btn-primary">
                                                Guardar
                                            </button>
                                        </span>
                                        <span class="col-md-3">
                                            <a href="/users" class="btn btn-secondary">Cancelar</a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /.content-wrapper -->
    </div>
</main1>