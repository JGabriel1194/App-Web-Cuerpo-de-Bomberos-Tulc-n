<main1 id="page-top">
    <div id="wrapper">
        {{> sidebar}}
        <div id="content-wrapper">

            <div class="container-fluid">

                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/dashboard">Panel</a></li>
                    <li class="breadcrumb-item"><a href="/ranges"> Rangos</a></li>
                    <li class="breadcrumb-item">Nuevo Rango</li>
                </ol>

                {{> messaje}}

                <div class="container">
                    <div class="col-md-3 mx-auto">
                        <form action="/ranges/edit/{{range.idRango}}" method="POST" enctype="multipart/form-data">
                            <div class="card">
                                <div class="card-body">
                                    <div class="container">
                                        <div class="row">
                                            <span class="col-md-12">
                                                <div class=" row">
                                                    <span>
                                                        <div class="form-group">
                                                            <img id="imagePreview" class="figure-img img-fluid rounded"
                                                                src=" {{#if range.image}} /files/{{range.image}} {{else}} /img/man-user.png {{/if}}"
                                                                width="100%" height="60" alt="Responsive image">
                                                        </div>
                                                    </span>
                                                </div>
                                                <div class="row">
                                                    <span>
                                                        <div class="form-group">
                                                            <label for="image" class="custom-file-upload">
                                                                <i class="fa fa-cloud-upload"></i> Subir Simbolo de
                                                                Rango
                                                            </label>
                                                            <input id="image" type="file" name="image" />
                                                        </div>
                                                        <div class="form-group">
                                                            <input type="text" name="Rango" placeholder="Rango"
                                                                class="form-control" value="{{range.Rango}} " autofocus>
                                                        </div>
                                                    </span>
                                                </div>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="row mx-auto">
                                        <span>
                                            <button class="btn btn-primary">
                                                Guardar
                                            </button>
                                        </span>
                                        <span class="col-md-3">
                                            <a href="/ranges" class="btn btn-secondary">Cancelar</a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /.content-wrapper -->
    </div>
</main1>